<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
<link rel="stylesheet" href="/css/homepage.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <div class="signup-form">
        <% if (errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form action="/signup" method="POST">
            <h3>Sign Up</h3>
            <p>Please fill in this form to create an account!</p>
            <hr>
            <div class="form-group">
                <div><input type="text" class="form-control" name="name" placeholder="Name" required="required">
                </div>
            </div>
            <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Email" required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password" required="required">
            </div>
            <div class="form-group">
                <div><input type="text" class="form-control" name="department" placeholder="Department"
                        required="required">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
            </div>
        </form>
        <div class="hint-text">Already have an account? <a href="/signin">Login here</a></div>
    </div>

    <%- include('../includes/end.ejs') %>